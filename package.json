{
    "name": "easyisp-backend",
    "version": "1.0.0",
    "description": "EasyISP SaaS Backend - Multi-tenant ISP Management System",
    "main": "dist/index.js",
    "type": "module",
    "scripts": {
        "dev": "tsx watch src/index.ts",
        "build": "tsc",
        "start": "node dist/index.js",
        "start:prod": "pm2 start ecosystem.config.js",
        "db:generate": "prisma generate",
        "db:migrate": "prisma migrate dev",
        "db:migrate:prod": "prisma migrate deploy",
        "db:seed": "tsx prisma/seed.ts",
        "db:studio": "prisma studio",
        "test": "vitest run",
        "test:watch": "vitest",
        "test:coverage": "vitest run --coverage",
        "lint": "eslint src --ext .ts",
        "typecheck": "tsc --noEmit"
    },
    "keywords": [
        "isp",
        "radius",
        "mikrotik",
        "saas",
        "multi-tenant"
    ],
    "author": "EasyISP",
    "license": "PROPRIETARY",
    "dependencies": {
        "@hono/node-server": "^1.13.1",
        "@prisma/client": "^5.22.0",
        "axios": "^1.7.8",
        "bcryptjs": "^2.4.3",
        "cors": "^2.8.5",
        "dotenv": "^16.4.5",
        "hono": "^4.6.12",
        "jsonwebtoken": "^9.0.2",
        "pg-boss": "^10.1.5",
        "pino": "^9.5.0",
        "pino-pretty": "^13.0.0",
        "routeros-client": "^1.1.1",
        "zod": "^3.23.8"
    },
    "devDependencies": {
        "@types/bcryptjs": "^2.4.6",
        "@types/cors": "^2.8.17",
        "@types/jsonwebtoken": "^9.0.7",
        "@types/node": "^22.10.2",
        "@typescript-eslint/eslint-plugin": "^8.18.1",
        "@typescript-eslint/parser": "^8.18.1",
        "@vitest/coverage-v8": "^2.1.8",
        "eslint": "^9.16.0",
        "prisma": "^5.22.0",
        "tsx": "^4.19.2",
        "typescript": "^5.7.2",
        "vitest": "^2.1.8"
    },
    "engines": {
        "node": ">=20.0.0"
    }
}
